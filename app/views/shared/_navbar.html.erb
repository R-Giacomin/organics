<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to products_path, class: "navbar-brand" do %>
    <%= image_tag "logo3.png" %>
    <% end %>
    <%= link_to "Home", products_path, class: "navbar-nav mr-auto home"%>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">

          <%= link_to "Meus pedidos", orders_path, class: "nav-link" %>

        </li>
        <% if current_user.category == "Produtor(a)" %>
        <li class="nav-item active">
          <%= link_to "Meus produtos", my_products_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Novo Produto", new_product_path, class: "nav-link" %>
        </li>
        <% else %>

        <!-- <li class="nav-item active">
          <%#= link_to "Meu carrinho", orders_path, class: "nav-link" %>
        </li> -->

        <% end %>
        <li class="nav-link">
          <strong> <%= current_user.name %> </strong>
        </li>
        <li class="nav-item dropdown">
          <% img = current_user.photo.attached? ? current_user.photo.key : "" %>
          <%= cl_image_tag img, class: "avatar dropdown-toggle", id: "navbarDropdown",
              data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Meu perfil", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
       <% else %>
        <li class="nav-item">
          <%= link_to "Entrar", new_user_session_path, class: "nav-link btn btn-warning text-white" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

