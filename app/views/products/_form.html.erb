<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%# <h1></h1> %>
      <%= simple_form_for @product do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :quantity %>
        <%= f.input :unit_measurement %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-warning' %>
      <% end %>
    </div>
  </div>
</div>
