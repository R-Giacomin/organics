<div class="banner" style="background-image: url('<%= image_path 'organic.jpg' %>');">
  <div class="banner-content">
    <h1>Fresh Organic Market</h1>
    <p>Produtos orgânicos fresquinhos</p>
    
  </div>
</div>

<div class="container">
<div class="search text-center">
  <%= form_tag products_path, :method => "get" do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag("Buscar Produto", :name => nil, class: "btn btn-warning") %>
  <% end %>
</div>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Productor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.user.email %></td>
        <td><%= link_to 'Detalhes', product %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
