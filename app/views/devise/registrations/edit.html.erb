<div class="container mt-5">
<h2>Altere seu cadastro</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs mt-3">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :name, label: 'Nome',
                required: true,
                input_html: { autocomplete: "name" }%>
    <%= f.input :address, label: 'Endereço',
                required: true,
                input_html: { autocomplete: "address" }%>
    <%= f.input :category, label: 'Categoria', :collection => ['Produtor(a)','Comprador(a)'] %>
    <%= f.input :password, label: 'Nova senha',
                hint: "Deixe o campo em branco se não deseja alterá-lo",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: 'Confirme sua senha',
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password, label: 'Senha atual',
                hint: "Precisamos de sua senha atual para confirmar as alterações",
                required: true,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :photo, as: :file, label: 'Foto do perfil',
                hint: "leave it blank if you don't want to change it",
                required: false %>
  </div>

  <div class="form-actions btn btn-warning">
    <%= f.button :submit, "Alterar", class: "btn btn-warning" %>
  </div>
<% end %>
<br>

